<div class="home-product">
    <% var homeProduct; %>
    <% for(let i = 0; i < homeProduct.length; i += 5){ %>
        <div class="grid__row">
            <% for(let j = i; j < i + 5 && j < homeProduct.length; j++){ %>
                <div class="grid__column-2-4 home-product-item-wrapper">
                    <% let item = homeProduct[j]; %>
                    <a class="home-product-item">
                        <div class="home-product-item__img"
                             style="background-image: url('<%- item.IMAGE %>')">
                        </div>
                        <h4 class="home-product-item__name">
                            <%- item.NAME %>
                        </h4>
                        <div class="home-product-item__price">
                        <span class="home-product-item__old-price">
                            <%- (item.DISCOUNT_RATE !== 0) ? "đ" + item.PRICE : null; %>
                        </span>
                            <span class="home-product-item__current-price">
                           đ<%- (item.DISCOUNT_RATE === 0) ? item.PRICE : item.PRICE - (item.PRICE / 100 * item.DISCOUNT_RATE); %>
                        </span>
                        </div>
                        <div class="home-product-item__labels">
                            <% if(item.DISCOUNT_RATE !== 0){ %>
                                <span class="home-product-item__sale-off-percent"><%- item.DISCOUNT_RATE + "%" %></span>
                            <% } %>
                            <span class="home-product-item__shop-label">#ShopDacBiet</span>
                        </div>
                        <div class="home-product-item__add-to-cart">
                            <i>Thêm vào giỏ hàng</i>
                        </div>
                        <div class="home-product-item__action">
                            <div class="home-product-item__rating">
                                <% for(let k = 0; k < 5; k++){ %>
                                    <% if(k < Math.round(item.AVERAGE_RATING)){ %>
                                        <i class="home-product-item__start--active fa-solid fa-star"></i>
                                    <% } else{ %>
                                        <i class="home-product-item__start--normal fa-solid fa-star"></i>
                                    <% } %>
                                <% } %>
                            </div>
                            <span class="home-product-item__number">
                                <%- "Số lượng còn lại: " + item.AMOUNT_LEFT %>
                            </span>
                        </div>
                        <div class="home-product-item__favourite">
                            <i class="fa-solid fa-check"></i>
                            Yêu thích
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    <% } %>
</div>